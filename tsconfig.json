{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pumped-fn/lite": ["packages/lite/src/index.ts"],
      "@pumped-fn/lite/*": ["packages/lite/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

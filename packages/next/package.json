{
  "name": "@pumped-fn/core-next",
  "version": "0.5.89",
  "description": "Enhanced function utilities for TypeScript",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --coverage.reporter=html && open coverage/index.html",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "vitest typecheck",
    "typecheck:full": "tsc --noEmit --project tsconfig.test.json",
    "verify:public-docs": "node ./scripts/verify-public-docs.mjs",
    "pump": "pnpm dlx commit-and-tag-version --path . -r patch -t @pumped-fn/next@",
    "release": "pnpm build && pnpm verify:public-docs && pnpm pump && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.5",
    "tsdown": "^0.16.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "directory": "packages/next",
    "url": "git+https://github.com/pumped-fn/pumped-fn.git"
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm run build && pnpm dlx auto-changelog -p"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${npm.name}@${version}",
      "changelog": "pnpm dlx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
    },
    "npm": {
      "publish": true
    }
  },
  "license": "MIT"
}

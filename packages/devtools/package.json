{
  "name": "@pumped-fn/devtools",
  "version": "0.1.2",
  "description": "Observability extension for @pumped-fn/lite with fire-and-forget transport-based event streaming",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "demo": "tsx examples/demo.ts"
  },
  "peerDependencies": {
    "@pumped-fn/lite": "^1.0.0"
  },
  "devDependencies": {
    "@pumped-fn/lite": "workspace:*",
    "tsdown": "^0.16.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  },
  "keywords": [
    "pumped-fn",
    "devtools",
    "observability",
    "extension",
    "debugging"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "directory": "packages/devtools",
    "url": "git+https://github.com/pumped-fn/pumped-fn.git"
  }
}
